          currentLanguage = lang;
          localStorage.setItem('quickMHLogLanguage', lang);

          dom.html.lang = lang;
          dom.html.dir = lang === 'fa' ? 'rtl' : 'ltr';

          dom.langEnBtn.classList.toggle('active', lang === 'en');
          dom.langFaBtn.classList.toggle('active', lang === 'fa');

          updateUIText();
          renderAll();
        };

        const updateUIText = () => {
          const t = translations[currentLanguage];
          document.title = t.appTitle;
          dom.appTitle.textContent = t.appTitle;
          dom.appSubtitle.textContent = t.appSubtitle;

          document.getElementById('nav-assessments').textContent =
            t.nav.assessments;
          document.getElementById('nav-history').textContent = t.nav.history;
          document.getElementById('nav-import-export').textContent =
            t.nav.importExport;

          dom.backToAssessmentsBtn.innerHTML = t.backBtn;
          dom.entryNoteTextarea.placeholder = t.form.notePlaceholder;

          document.querySelectorAll('[data-i18n]').forEach((el) => {
            const key = el.dataset.i18n;
            const keys = key.split('.');
            let text = t;
            keys.forEach((k) => {
              text = text[k];
            });
            if (text) el.innerHTML = text;
          });
        };

