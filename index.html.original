          const domainKey = document.getElementById('domain-key-input').value;
          if (currentView === 'domain-detail-view' && domainKey) {
            showDomainDetail(domainKey, false); // false to not switch view
          }
        };

        const renderAssessmentCards = () => {
          const domainData = translations[currentLanguage].domains;
          const scoreRangeText =
            currentLanguage === 'fa' ? 'محدوده نمره' : 'Score Range';
          dom.assessmentGrid.innerHTML = '';
          for (const key in domainData) {
            const domain = domainData[key];
            const card = document.createElement('div');
            card.className = 'assessment-card card';
            card.dataset.key = key;
            card.innerHTML = `
                    <h3>${domain.name}</h3>
                    <p>${domain.description.substring(0, 120)}...</p>
                    <span class="score-preview">${scoreRangeText}: ${
              domain.scoreRange
            }</span>
                `;
            card.addEventListener('click', () => showDomainDetail(key));
            dom.assessmentGrid.appendChild(card);
          }
        };

        const showDomainDetail = (key, switchView = true) => {
          const domain = translations[currentLanguage].domains[key];
          document.getElementById('detail-title').textContent = domain.name;
          document.getElementById('detail-description').textContent =
            domain.description;
          document.getElementById('detail-scoring').textContent =
            domain.scoring;
          document.getElementById('detail-clinical-note').textContent =
            domain.clinicalNote;

          const measuresList = document.getElementById('detail-measures');
          measuresList.innerHTML = '';
          domain.measures.forEach((item) => {
            const li = document.createElement('li');
            li.textContent = item;
            measuresList.appendChild(li);
          });

          const interpretationGrid = document.getElementById(
            'detail-interpretation'
          );
          interpretationGrid.innerHTML = '';
          domain.interpretation.forEach((item) => {
            const div = document.createElement('div');
            div.className = 'score-interpretation-item';
            div.innerHTML = `<div class="range">${item.range}</div><div class="level">${item.level}</div>`;
            interpretationGrid.appendChild(div);
          });

          dom.logEntryForm.reset();
          document.getElementById('domain-key-input').value = key;
          document.getElementById('entry-date').valueAsDate = new Date();
          const scoreInput = document.getElementById('entry-score');
          const scoreRange = domain.scoreRange.replace(
            /[\u06F0-\u06F9]/g,
            (d) => '۰۱۲۳۴۵۶۷۸۹'.indexOf(d)
          );
          const [min, max] = scoreRange.split('-').map(Number);
          scoreInput.min = min;
          if (max) scoreInput.max = max;
          else scoreInput.removeAttribute('max');

          if (switchView) showView('domain-detail-view');
        };

        const renderHistoryTable = () => {
          entries.sort((a, b) => {
            const valA = a[currentSort.column],
              valB = b[currentSort.column];
            let comparison = 0;
            if (valA > valB) comparison = 1;
            else if (valA < valB) comparison = -1;
            return currentSort.direction === 'desc'
              ? comparison * -1
              : comparison;
          });

          dom.historyTableHeaders.forEach((th) => {
            th.classList.remove('sorted-asc', 'sorted-desc');
            if (th.dataset.sort === currentSort.column) {
              th.classList.add(
                currentSort.direction === 'asc' ? 'sorted-asc' : 'sorted-desc'
              );
            }
          });

          dom.historyTableBody.innerHTML = '';
          if (entries.length === 0) {
            dom.historyTableBody.innerHTML = `<tr><td colspan="5" style="text-align: center; padding: 2rem;">${translations[currentLanguage].history.empty}</td></tr>`;
            return;
          }

          const domainNames = translations[currentLanguage].domains;
          entries.forEach((entry) => {
            const row = document.createElement('tr');
            const dateLocale = currentLanguage === 'fa' ? 'fa-IR' : 'en-CA';
            const numberLocale = currentLanguage === 'fa' ? 'fa-IR' : 'en-US';
            row.innerHTML = `
                    <td>${new Date(entry.date).toLocaleDateString(
                      dateLocale
                    )}</td>
                    <td>${domainNames[entry.domainKey]?.name || 'Unknown'}</td>
                    <td>${entry.score.toLocaleString(numberLocale)}</td>
                    <td>${entry.note
                      .replace(/</g, '&lt;')
                      .replace(/>/g, '&gt;')}</td>
                    <td>
                        <button class="btn-danger" data-id="${
                          entry.id
                        }">&times;</button>
                    </td>
                `;
            row.querySelector('.btn-danger').addEventListener('click', (e) => {
              if (confirm(translations[currentLanguage].confirmDelete)) {
                deleteEntry(e.target.dataset.id);
              }
            });
            dom.historyTableBody.appendChild(row);
          });
        };

        // --- ACTIONS ---
        const addEntry = (entry) => {
          entries.push(entry);
          saveEntries();
          renderHistoryTable();
          showToast(translations[currentLanguage].toast.saved, 'success');
        };

        const deleteEntry = (id) => {
          entries = entries.filter((entry) => entry.id !== id);
          saveEntries();
          renderHistoryTable();
          showToast(translations[currentLanguage].toast.deleted, 'success');
        };

        const handleSort = (column) => {
          if (currentSort.column === column) {
            currentSort.direction =
              currentSort.direction === 'asc' ? 'desc' : 'asc';
          } else {
            currentSort.column = column;
            currentSort.direction = 'desc';
          }
          renderHistoryTable();
        };

        // --- CSV UTILITIES ---
        const exportToCSV = () => {
          if (entries.length === 0) {
            showToast(
              translations[currentLanguage].toast.noDataToExport,
              'error'
            );
            return;
          }
          const headers = ['id', 'date', 'domainKey', 'score', 'note'];
          const csvRows = [headers.join(',')];
          const escapeCSV = (str) => `"${(str || '').replace(/"/g, '""')}"`;
          entries.forEach((entry) => {
            const row = [
              entry.id,
              entry.date,
              entry.domainKey,
              entry.score,
              escapeCSV(entry.note),
            ].join(',');
            csvRows.push(row);
          });
          const blob = new Blob(['\uFEFF' + csvRows.join('\n')], {
            type: 'text/csv;charset=utf-8;',
          });
          const link = document.createElement('a');
          link.href = URL.createObjectURL(blob);
          link.download = `QuickMHLog_Export_${
            new Date().toISOString().split('T')[0]
          }.csv`;
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);
          showToast(translations[currentLanguage].toast.exported, 'success');
        };

        const importFromCSV = (event) => {
          const file = event.target.files[0];
          if (!file) return;
          const reader = new FileReader();
          reader.onload = (e) => {
            try {
              const text = e.target.result;
              const rows = text.split('\n').slice(1);
              let importedCount = 0;
              rows.forEach((rowStr) => {
                if (!rowStr.trim()) return;
                const [id, date, domainKey, score, note] = rowStr.split(',');
                if (
                  id &&
                  date &&
                  domainKey &&
                  score &&
                  note !== undefined &&
                  translations.en.domains[domainKey]
                ) {
                  if (!entries.some((entry) => entry.id === id)) {
                    entries.push({
                      id,
                      date,
                      domainKey,
                      score: Number(score),
                      note: note.replace(/^"|"$/g, '').replace(/""/g, '"'),
                    });
                    importedCount++;
                  }
                }
              });
              saveEntries();
              renderHistoryTable();
              showToast(
                translations[currentLanguage].toast.imported(importedCount),
                'success'
              );
            } catch (error) {
              showToast(
                translations[currentLanguage].toast.importError,
                'error'
              );
            } finally {
              dom.csvImportInput.value = '';
            }
          };
          reader.readAsText(file);
        };

        // --- NOTIFICATIONS ---
        const showToast = (message, type = 'success') => {
          dom.toast.textContent = message;
          dom.toast.className = `toast show ${type}`;
          setTimeout(() => {
            dom.toast.classList.remove('show');
          }, 3000);
        };

        // --- EVENT LISTENERS ---
        dom.langEnBtn.addEventListener('click', () => setLanguage('en'));
        dom.langFaBtn.addEventListener('click', () => setLanguage('fa'));

        dom.navButtons.forEach((btn) => {
          btn.addEventListener('click', (e) =>
            showView(e.target.id.replace('nav-', '') + '-view')
          );
        });

        dom.backToAssessmentsBtn.addEventListener('click', () =>
          showView('assessments-view')
        );

        dom.logEntryForm.addEventListener('submit', (e) => {
          e.preventDefault();
          addEntry({
            id: Date.now().toString(),
            date: document.getElementById('entry-date').value,
            domainKey: document.getElementById('domain-key-input').value,
            score: Number(document.getElementById('entry-score').value),
            note: dom.entryNoteTextarea.value.trim(),
          });
          dom.logEntryForm.reset();
          showView('history-view');
        });

        dom.historyTableHeaders.forEach((th) => {
          th.addEventListener('click', () => handleSort(th.dataset.sort));
        });

        dom.exportCsvBtn.addEventListener('click', exportToCSV);
        dom.csvImportInput.addEventListener('change', importFromCSV);

        // --- INITIALIZATION ---
        const init = () => {
          loadEntries();
          setLanguage(currentLanguage); // This will set language and render everything
          showView('assessments-view');
        };

        init();
      });
    </script>
  </body>
</html>
