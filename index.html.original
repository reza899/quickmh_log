          dom.navButtons.forEach((btn) => btn.classList.remove('active'));
          if (
            viewId.includes('assessments') ||
            viewId.includes('domain-detail')
          ) {
            document.getElementById('nav-assessments').classList.add('active');
          } else if (viewId.includes('history')) {
            document.getElementById('nav-history').classList.add('active');
          } else if (viewId.includes('import-export')) {
            document
              .getElementById('nav-import-export')
              .classList.add('active');
          }
        };

